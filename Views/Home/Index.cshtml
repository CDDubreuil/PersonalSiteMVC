@{
    ViewData["Title"] = "Home Page";
}


        <!-- Header-->
        <header class="bg-light py-5">
            <div class="container px-5">
                <div class="row gx-5 align-items-center justify-content-center">
                    <div class="col-lg-8 col-xl-7 col-xxl-6">
                        <div class="my-5 text-center text-xl-start">
                            <h1 class="display-5 fw-bolder text-white mb-2">Hi, I'm Chanel!</h1>
                            <p class="lead fw-normal text-white-50 mb-4">and I'm a full-stack developer based in KCMO</p>
                            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                                <a class="btn btn-primary btn-lg px-4 me-sm-3" href="about.html">Who Am I?</a>
                                <a class="btn btn-outline-light btn-lg px-4" id="wigglewiggle" href="contact.html">Talk to Me!</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="images/Me1.jpg" alt="..." /></div>
                </div>
            </div>
        </header>
        <!-- Features section-->
        <section class="py-5" id="features">
            <div class="container px-5 my-5 mt-5 mb-5">
                <div class="row gx-5">
                    <div class="col-lg-4 mb-5 mb-lg-0"><h2 class="fw-bolder mb-0">Here's a little bit about me. </h2></div>
                    <div class="col-lg-8">
                        <div class="row gx-5 row-cols-1 row-cols-md-2">
                            <div class="col mb-5 h-100">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mt-10 mb-3"><i class="bi bi-collection"></i></div>
                                <h2 class="h5">What is my ideal position?</h2>
                                <p class="mb-0">One day, I hope to be a video game developer. Gaming is my biggest hobby, and I would love to make it my whole life!</p>
                            </div>
                            <div class="col mb-5 h-100">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-building"></i></div>
                                <h2 class="h5">What makes me a great team member?</h2>
                                <p class="mb-0"> I have an endless need for knowledge. I'm never satisfied until I understand how something works, and will spend hours researching how to make something work until I have perfected the process.</p>
                            </div>
                            <div class="col mb-5 mb-md-0 h-100">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-toggles2"></i></div>
                                <h2 class="h5">What motivates me?</h2>
                                <p class="mb-0"> There's nothing that makes me happier than learning a new skill, and when I'm coding, I'm constantly growing and evolving. It's amazing to be able to watch something I made come to life on the screen.</p>
                            </div>
                            <div class="col h-100">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-toggles2"></i></div>
                                <h2 class="h5">What do I do in my free time? </h2>
                                <p class="mb-0">I spend my time baking cakes, sculpting weird monsters, and dying in video games. I'll get good some day.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <!-- Call to action-->
        <aside class="bg-primary bg-gradient rounded-3 p-4 p-sm-5 mt-5">
            <div class="d-flex align-items-center justify-content-center flex-column flex-xl-row text-center text-xl-start">
                <div class="mb-4 mb-xl-0">
                    <div class="fs-3 fw-bold text-white">Wanna know more?</div>
                    <div class="text-white-50">Contact me and I'll get back with you soon.</div>
                </div>
                <div class="ms-xl-4">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Your Name..." />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Email address..." />

                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Subject..." />

                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Your Message Here..." />
                        <button class="btn btn-outline-light" id="button-newsletter" type="button">Send Message</button>

                    </div>

                </div>
            </div>
        </aside>
        </div>
        </section>
